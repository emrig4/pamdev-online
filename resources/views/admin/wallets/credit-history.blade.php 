            <div class="stat-card">
                <div class="stat-value" id="avg-amount">-</div>
                <div class="stat-label">Average Amount</div>
            </div>
        </div>

        <!-- Filters -->
        <div class="card">
            <h2 class="card-title">üîç Filter Transactions</h2>
            <div class="filter-section">
                <div class="filter-row">
                    <div class="form-group">
                        <label class="form-label">Search User</label>
                        <input type="text" id="user-filter" class="form-input" placeholder="User name or email">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Date From</label>
                        <input type="date" id="date-from" class="form-input">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Date To</label>
                        <input type="date" id="date-to" class="form-input">
                    </div>
                    <button type="button" id="apply-filters" class="btn btn-primary">
                        Apply Filters
                    </button>
                </div>
            </div>
        </div>

        <!-- History Table -->
        <div class="card">
            <h2 class="card-title">üí≥ Credit Transactions</h2>
            <div class="table-container">
                <table class="history-table" id="credit-history-table">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Amount</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Remark</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody id="credit-history-body">
                        <tr>
                            <td colspan="6" style="text-align: center; color: #64748b; padding: 40px;">
                                Loading credit history...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        let creditHistoryData = [];

        // Load credit history
        function loadCreditHistory() {
            fetch('/admin/wallets/credit-history')
                .then(response => response.json())
                .then(data => {
                    if (data.data) {
                        creditHistoryData = data.data;
                        updateTable();
                        updateStats();
                    }
                })
                .catch(error => {
                    console.error('Error loading history:', error);
                    document.getElementById('credit-history-body').innerHTML = `
                        <tr>
                            <td colspan="6" style="text-align: center; color: #dc2626; padding: 20px;">
                                Error loading credit history
                            </td>
                        </tr>
                    `;
                });
        }

        // Update table with filtered data
        function updateTable() {
            const tbody = document.getElementById('credit-history-body');
            let filteredData = creditHistoryData;

            // Apply filters
            const userFilter = document.getElementById('user-filter').value.toLowerCase();
            const dateFrom = document.getElementById('date-from').value;
            const dateTo = document.getElementById('date-to').value;

            if (userFilter) {
                filteredData = filteredData.filter(item => 
                    item.user_name.toLowerCase().includes(userFilter) || 
                    item.user_email.toLowerCase().includes(userFilter)
                );
            }

            if (dateFrom) {
                filteredData = filteredData.filter(item => 
                    new Date(item.date_formatted) >= new Date(dateFrom)
                );
            }

            if (dateTo) {
                filteredData = filteredData.filter(item => 
                    new Date(item.date_formatted) <= new Date(dateTo + 'T23:59:59')
                );
            }

            // Render table
            if (filteredData.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="6" style="text-align: center; color: #64748b; padding: 40px;">
                            No credit history found
                        </td>
                    </tr>
                `;
            } else {
                tbody.innerHTML = filteredData.map(item => `
                    <tr>
                        <td>
                            <div class="user-info">
                                <div class="user-name">${item.user_name}</div>
                                <div class="user-email">${item.user_email}</div>
                            </div>
                        </td>
                        <td class="amount">${item.amount_formatted}</td>
                        <td>${item.type || 'Credit'}</td>
                        <td><span class="status status-${item.status}">${item.status}</span></td>
                        <td class="remark">${item.remark || 'Manual Credit'}</td>
                        <td class="date">${item.date_formatted}</td>
                    </tr>
                `).join('');
            }
        }

        // Update statistics
        function updateStats() {
            const total = creditHistoryData.length;
            const totalAmount = creditHistoryData.reduce((sum, item) => sum + parseFloat(item.ranc || 0), 0);
            const avgAmount = total > 0 ? totalAmount / total : 0;

            document.getElementById('total-count').textContent = total;
            document.getElementById('total-amount').textContent = totalAmount.toFixed(2);
            document.getElementById('avg-amount').textContent = avgAmount.toFixed(2);
        }

        // Apply filters
        document.getElementById('apply-filters').addEventListener('click', updateTable);

        // Real-time filter
        document.getElementById('user-filter').addEventListener('input', updateTable);
        document.getElementById('date-from').addEventListener('change', updateTable);
        document.getElementById('date-to').addEventListener('change', updateTable);

        // Load data on page load
        document.addEventListener('DOMContentLoaded', loadCreditHistory);
    </script>
</body>
